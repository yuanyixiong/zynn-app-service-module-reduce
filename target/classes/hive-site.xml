<configuration>
    <property>
        <name>dfs.permissions.enabled</name>
        <value>false</value>
        <description>是否检查hadoop用户名</description>
    </property>
    <!--<property>-->
        <!--<name>hive.exec.scratchdir</name>-->
        <!--<value>hdfs://172.16.89.150:9000/hive/tmp</value>-->
        <!--<description>于存储不同map/reduce阶段的执行计划和这些阶段的中间输出结果</description>-->
    <!--</property>-->
    <property>
        <name>hive.metastore.warehouse.dir</name>
        <value>/user/hive/warehouse</value>
        <description>hive数据存储在hdfs上的目录</description>
    </property>
    <!--<property>-->
        <!--<name>hive.querylog.location</name>-->
